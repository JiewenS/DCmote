<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView

            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Switch Name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/txtsname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="switch name"
            android:paddingLeft="40dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Command "
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/txtcmd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="type here  your command"
            android:paddingLeft="40dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Icon"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView4d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:text="choose your icon in bellow" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:text="----" />

        <ImageView
            android:id="@+id/imageV"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:background="#f22929" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="238dp"
            android:layout_weight="0.30"
            android:paddingLeft="60dp"
            android:paddingRight="60dp">

            <ImageView

                android:id="@+id/btnon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/ic_launcher" />

            <ImageView

                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_above="@+id/btnfan"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/btnhome1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/btnon"
                android:layout_alignStart="@+id/btnon"
                android:layout_below="@+id/btnon"
                android:background="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/btnfan"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_above="@+id/btnlight"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/btnroom"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/btnhome1"
                android:layout_alignStart="@+id/btnhome1"
                android:layout_below="@+id/btnhome1"
                android:background="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/btnlight"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/btnfan"
                android:layout_alignStart="@+id/btnfan"
                android:layout_below="@+id/btnhome1"
                android:background="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/btnoutdoor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/btnroom"
                android:layout_alignStart="@+id/btnroom"
                android:layout_below="@+id/btnroom"
                android:background="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/btncontrol"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/btnlight"
                android:layout_alignStart="@+id/btnlight"
                android:layout_below="@+id/btnlight"
                android:background="@mipmap/ic_launcher" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="500dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:background="#f40d0d" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingLeft="100dp"
            android:paddingRight="50dp">


            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignLeft="@+id/btnoutdoor"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/btnoutdoor"
                android:background="@android:drawable/ic_input_add" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <ImageView

                android:id="@+id/imageView9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignEnd="@+id/btncontrol"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/btncontrol"
                android:background="@android:drawable/ic_delete" />


        </LinearLayout>


        <ImageView
            android:id="@+id/imageView10df"
            android:layout_width="500dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:background="#f40d0d" />


    </LinearLayout>
</ScrollView>
