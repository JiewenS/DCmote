<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#1356f2"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="30dp"

    tools:context="com.rts.dcmote.dcmote.Lunch">

    <ImageView
        android:id="@+id/btnsetup"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:background="@drawable/as" />

    <ImageView
        android:id="@+id/btnaboutt"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/deve" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnaboutt"
        android:layout_centerHorizontal="true"
        android:text="Add Switch"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fbf5f5"
        android:textSize="25dp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="368dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/btnconect"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/ch" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/btnconect"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignRight="@+id/btnconect"
                    android:layout_below="@+id/btnconect"
                    android:text="Bluetooth"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#fbf5f5"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btnwifimode"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/btnconect"
                    android:background="@drawable/btmode"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/txtbtmode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView5"
                    android:layout_alignEnd="@+id/btnwifimode"
                    android:layout_alignRight="@+id/btnwifimode"
                    android:layout_below="@+id/btnwifimode"
                    android:layout_toEndOf="@+id/btnconect"
                    android:layout_toRightOf="@+id/btnconect"
                    android:autoText="false"
                    android:text="Wifi Mode"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#fbf5f5"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btniot"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/btnwifimode"
                    android:layout_toRightOf="@+id/btnwifimode"
                    android:background="@drawable/btmode"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/txtbdmode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/btniot"
                    android:layout_alignLeft="@+id/btniot"
                    android:layout_alignRight="@+id/btniot"
                    android:layout_alignStart="@+id/btniot"
                    android:layout_below="@+id/btniot"
                    android:autoText="false"
                    android:text="Internet"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#fbf5f5"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <![CDATA[





    ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView4"
        android:background="@drawable/ch"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnaboutt"
        android:layout_alignEnd="@+id/btnaboutt" />




]]>
</RelativeLayout>
